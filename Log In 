import tkinter as tk
from tkinter import messagebox
import xmlrpc.client

def Validation_Connexion(ip="172.31.10.249", port=8069, db="HGABadCo"):

    # Adresse et bases de données Odoo
    url = "http://{}:{}/xmlrpc/2".format(ip, port)
    common = xmlrpc.client.ServerProxy('{}/common'.format(url))
    models = xmlrpc.client.ServerProxy('{}/object'.format(url))

    # Récupère les Mots De Passe (MDP) et identifiants (id) rentrer
    id_entrer = username_entry.get()
    mdp_entrer = password_entry.get()

    # Vérifier si id et MDP entrées correspondent
    uid = common.authenticate(db, id_entrer, mdp_entrer, {})

    # Vérifier si connexion réussie et afficher message de résultat
    if uid:
        messagebox.showinfo("Connexion Réussie", "Bienvenue, " + id_entrer + "!")
    else:
        messagebox.showerror("Echec de connexion", "Utilisateur ou mot de passe incorrect")


    # Vérifier si l'employé a accès au stock (groupe "stock.group_stock_user")
    has_stock_access = models.execute_kw(db, uid, mdp_entrer, 'res.users', 'has_group', ['stock.group_stock_user'])
    # Message autorisation stock
    if has_stock_access:
        messagebox.showinfo("Autorisation", "L'employé a l'autorisation d'accéder au stock.")
    else:
        messagebox.showwarning("Autorisation insuffisante", "L'employé n'est pas autorisé à accéder au stock.")
    

    # Vérifier si l'employé a accès à la production (groupe "votre_groupe_production")
    has_production_access = models.execute_kw(db, uid, mdp_entrer, 'res.users', 'has_group', ['manufacturing.group_manufacturing_user'])
    # Message autorisation stock
    if has_production_access:
            messagebox.showinfo("Autorisation", "L'employé a l'autorisation d'accéder à la production.")
    else:
            messagebox.showwarning("Autorisation insuffisante", "L'employé n'est pas autorisé à accéder à la production.")


 

# Création page de connexion
root = tk.Tk()
root.title("Connexion Odoo")

# Créer et place texte identifiant
username_label = tk.Label(root, text="Utilisateur:")
username_label.grid(row=0, column=0, padx=10, pady=10, sticky="w")
#Créer et place champ d'entrée id
username_entry = tk.Entry(root)
username_entry.grid(row=0, column=1, padx=10, pady=10)

# Créer et place texte MDP
password_label = tk.Label(root, text="Mot de passe:")
password_label.grid(row=1, column=0, padx=10, pady=10, sticky="w")
# Créer et place champ d'entrée MDP
password_entry = tk.Entry(root, show="*")
password_entry.grid(row=1, column=1, padx=10, pady=10)

# Créer et place bouton de connexion
login_button = tk.Button(root, text="Connexion", command=Validation_Connexion)
login_button.grid(row=2, column=0, columnspan=2, pady=10)

# Run the Tkinter main loop
root.mainloop()


