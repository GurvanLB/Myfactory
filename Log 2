import tkinter as tk
from tkinter import messagebox
from xmlrpc import client as xmlrpclib

def validate_login():
    # Adresse et base de donnée Odoo
    url = "http://172.31.10.249:8069"
    db = "HGABadCo"
    # Récupère les Mots De Passe (MDP) et identifiants (id) rentrer
    id_entrer = username_entry.get()
    mdp_entrer = password_entry.get()

    # Vérifier si id et MDP sont correct
    common = xmlrpclib.ServerProxy('{}/common'.format(url))
    uid = common.authenticate(db, id_entrer, mdp_entrer, {})

    # Vérifier si connexion réussie
    if uid:
        messagebox.showinfo("Connexion Réussie", "Bienvenue, " + id_entrer + "!")
        print("Connexion réussie. UID =", uid)
    else:
        messagebox.showerror("Echec de connexion", "Utilisateur ou mot de passe incorrect")
        print("Echec de la connexion. Vérifier les informations")

# Create the main window
root = tk.Tk()
root.title("Connexion Odoo")

# Create and place the username label and entry
username_label = tk.Label(root, text="Utilisateur:")
username_label.grid(row=0, column=0, padx=10, pady=10, sticky="w")

username_entry = tk.Entry(root)
username_entry.grid(row=0, column=1, padx=10, pady=10)

# Create and place the password label and entry
password_label = tk.Label(root, text="Mot de passe:")
password_label.grid(row=1, column=0, padx=10, pady=10, sticky="w")

password_entry = tk.Entry(root, show="*")
password_entry.grid(row=1, column=1, padx=10, pady=10)

# Create and place the login button
login_button = tk.Button(root, text="Connexion", command=validate_login)
login_button.grid(row=2, column=0, columnspan=2, pady=10)

# Run the Tkinter main loop
root.mainloop()


